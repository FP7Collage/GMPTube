<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="308" height="144" styleName="videoProgressCanvas" backgroundColor="#9A9696" backgroundAlpha="0.9">
	
<mx:Script source=".././Asfiles/as_constants.as" />
	
		<mx:Script>
		<![CDATA[
			import mx.core.Application;
	   		[Bindable]public var app:Tentube=Tentube(Application.application);
	   		[Bindable]public var intensityArray : Array = new Array("1","2","3","4","5");
	   		
	   		//intensityArray = new Array("1","2","3","4","5");
	   		
	   		private function updateConnectToAll():void{
	   	       app.calculateConnectToAllMembers(grpList.selectedItem.toString(),intensityList.selectedItem.toString() );	   			
	   		}
	   		private function cancelConnectToAll():void{
	   	      app.cancelConnectToAllMembers(); 	  			
	   		}
	   		
	   		
		]]>
	</mx:Script>
		<mx:ComboBox id="grpList" x="82" y="23" dataProvider="{app.groupList}">
		
		</mx:ComboBox>
		<mx:ComboBox id="intensityList" x="82" y="66" width="50" dataProvider="{intensityArray}">
		
		</mx:ComboBox>
		<mx:Label x="20" y="25" text="Group" width="54"/>
		<mx:Label x="20" y="68" text="{intensityM}"/>
		<mx:Button x="136" y="99" label="{submitRM}" click="updateConnectToAll();"/>
		<mx:Button x="23" y="99" label="{cancelM}" click="cancelConnectToAll();" />
</mx:Canvas>
